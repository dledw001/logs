# Server
PORT=4000

# Database
DATABASE_URL=postgresql://logs_user:logs_password@localhost:5432/logs_dev
DATABASE_URL_TEST=postgresql://logs_user:logs_password@localhost:5432/logs_test

# Auth / Security
BCRYPT_SALT_ROUNDS=12
PASSWORD_PEPPER=change-me
SESSION_MAX_PER_USER=5
SESSION_IDLE_TIMEOUT_MINUTES=30
SESSION_TTL_DAYS=7
SESSION_ROLLING_RENEWAL_MINUTES=1440

# Rate limits
LOGIN_LIMIT_IP_MAX=10
LOGIN_LIMIT_ID_MAX=7
LOGIN_LIMIT_WINDOW_MS=900000
LOGIN_LIMIT_BLOCK_MS=900000
RESET_LIMIT_MAX=5
RESET_LIMIT_WINDOW_MS=3600000
RESET_LIMIT_BLOCK_MS=3600000

# Logging
LOG_LEVEL=info
LOG_CONSOLE=true
ACCESS_LOG_ENABLED=true
ACCESS_LOG_FILE=./access.log
LOG_MAX_BYTES=5242880
AUDIT_LOG_ENABLED=true
AUDIT_LOG_CONSOLE=false
AUDIT_LOG_FILE=./audit.log
AUDIT_LOG_MAX_BYTES=5242880
AUDIT_DB_ENABLED=true

# CORS / CSP
ALLOWED_ORIGINS=http://localhost:4000

# Debug
LOG_DB_QUERIES=false
