{
  "openapi": "3.0.3",
  "info": {
    "title": "logs-backend API",
    "version": "1.0.1",
    "description": "Authentication-first template with sessions, CSRF, rate limiting, roles, and password reset."
  },
  "servers": [
    { "url": "http://localhost:4000" }
  ],
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "sid"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "username": { "type": "string" },
          "username_display": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "email_verified_at": { "type": "string", "format": "date-time", "nullable": true },
          "is_admin": { "type": "boolean" },
          "roles": { "type": "array", "items": { "type": "string" } },
          "created_at": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "username", "email", "is_admin"],
        "example": {
          "id": 1,
          "username": "alice",
          "username_display": "alice",
          "email": "alice@example.com",
          "email_verified_at": "2025-01-01T00:00:00.000Z",
          "is_admin": false,
          "roles": ["user"],
          "created_at": "2025-01-01T00:00:00.000Z"
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": { "type": "string" }
        },
        "example": { "error": "password must be 8-128 characters" }
      }
    }
  },
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register user",
        "tags": ["auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "email", "password"],
                "properties": {
                  "username": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password" }
                }
              },
              "example": {
                "username": "alice",
                "email": "alice@example.com",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } } },
          "400": {
            "description": "Validation error",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" }, "examples": { "too_short": { "summary": "Password too short", "value": { "error": "password must be 8-128 characters" } } } } }
          },
          "409": {
            "description": "Conflict",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" }, "examples": { "username": { "summary": "Username taken", "value": { "error": "username already taken" } }, "email": { "summary": "Email used", "value": { "error": "email already used" } } } } }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login",
        "operationId": "login",
        "tags": ["auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["password"],
                "properties": {
                  "identifier": { "type": "string" },
                  "username": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password" }
                }
              },
              "example": {
                "identifier": "alice",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } } },
          "400": { "description": "Validation error", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "Invalid credentials", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "429": { "description": "Rate limit", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "summary": "Logout",
        "tags": ["auth"],
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          {
            "name": "x-csrf-token",
            "in": "header",
            "required": false,
            "schema": { "type": "string" },
            "description": "CSRF token; copy the value of the csrf_token cookie set on login."
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "403": {
            "description": "CSRF failed",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" },
                "example": { "error": "invalid CSRF token" }
              }
            }
          }
        }
      }
    },
    "/api/auth/me": {
      "get": {
        "summary": "Current user",
        "tags": ["auth"],
        "security": [{ "cookieAuth": [] }],
        "responses": {
          "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } } },
          "401": { "description": "Not authenticated", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/auth/sessions": {
      "get": {
        "summary": "List my sessions",
        "tags": ["auth"],
        "security": [{ "cookieAuth": [] }],
        "responses": {
          "200": {
            "description": "Sessions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sessions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer" },
                          "created_at": { "type": "string", "format": "date-time" },
                          "expires_at": { "type": "string", "format": "date-time" },
                          "last_seen_at": { "type": "string", "format": "date-time" },
                          "revoked_at": { "type": "string", "format": "date-time", "nullable": true }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Not authenticated" }
        }
      }
    },
    "/api/auth/sessions/revoke-others": {
      "post": {
        "summary": "Revoke other sessions",
        "tags": ["auth"],
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          { "name": "x-csrf-token", "in": "header", "required": true, "schema": { "type": "string" }, "description": "CSRF token" }
        ],
        "responses": {
          "204": { "description": "Other sessions revoked" },
          "401": { "description": "Not authenticated" }
        }
      }
    },
    "/api/auth/email/verify/request": {
      "post": {
        "summary": "Request email verification token",
        "operationId": "emailVerifyRequest",
        "tags": ["auth"],
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          { "name": "x-csrf-token", "in": "header", "required": true, "schema": { "type": "string" }, "description": "CSRF token from csrf_token cookie" }
        ],
        "responses": {
          "200": {
            "description": "Token returned (non-prod only)",
            "content": { "application/json": { "schema": { "type": "object", "properties": { "verify_token": { "type": "string" }, "expires_in_minutes": { "type": "integer" } } } } }
          },
          "204": { "description": "No Content (prod or already verified)" },
          "401": { "description": "Not authenticated" }
        }
      }
    },
    "/api/auth/email/verify/complete": {
      "post": {
        "summary": "Complete email verification",
        "operationId": "emailVerifyComplete",
        "tags": ["auth"],
        "parameters": [
          { "name": "x-csrf-token", "in": "header", "required": true, "schema": { "type": "string" }, "description": "CSRF token from csrf_token cookie" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "type": "object", "required": ["token"], "properties": { "token": { "type": "string" } } }
            }
          }
        },
        "responses": {
          "204": { "description": "Verified" },
          "400": { "description": "Invalid or expired token", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/auth/password/change": {
      "post": {
        "summary": "Change password",
        "operationId": "changePassword",
        "tags": ["auth"],
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          { "name": "x-csrf-token", "in": "header", "required": true, "schema": { "type": "string" }, "description": "CSRF token from csrf_token cookie" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["current_password", "new_password"],
                "properties": {
                  "current_password": { "type": "string", "format": "password" },
                  "new_password": { "type": "string", "format": "password" }
                }
              }
            }
          }
        },
        "responses": {
          "204": { "description": "Password changed; sessions revoked" },
          "400": { "description": "Validation error", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "Invalid current password or not authenticated", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/auth/account": {
      "delete": {
        "summary": "Delete account",
        "operationId": "deleteAccount",
        "tags": ["auth"],
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          { "name": "x-csrf-token", "in": "header", "required": true, "schema": { "type": "string" }, "description": "CSRF token from csrf_token cookie" }
        ],
        "responses": {
          "204": { "description": "Deleted" },
          "401": { "description": "Not authenticated", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/auth/password-reset/request": {
      "post": {
        "summary": "Request password reset",
        "operationId": "passwordResetRequest",
        "tags": ["auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "type": "object", "required": ["identifier"], "properties": { "identifier": { "type": "string" } } }
            }
          }
        },
        "responses": {
          "200": { "description": "Token (non-prod only)" },
          "204": { "description": "No Content (prod, or user not found)" },
          "429": { "description": "Rate limit", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/auth/password-reset/complete": {
      "post": {
        "summary": "Complete password reset",
        "operationId": "passwordResetComplete",
        "tags": ["auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["token", "password"],
                "properties": {
                  "token": { "type": "string" },
                  "password": { "type": "string", "format": "password" }
                }
              }
            }
          }
        },
        "responses": {
          "204": { "description": "Password updated" },
          "400": { "description": "Invalid token or password", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/admin/ping": {
      "get": {
        "summary": "Admin ping",
        "tags": ["admin"],
        "security": [{ "cookieAuth": [] }],
        "responses": {
          "200": { "description": "OK", "content": { "application/json": { "schema": { "type": "object", "properties": { "ok": { "type": "boolean" } } } } } },
          "401": { "description": "Not authenticated" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/api/admin/users": {
      "get": {
        "summary": "List all users (admin)",
        "tags": ["admin"],
        "security": [{ "cookieAuth": [] }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "users": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/User" }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Not authenticated" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/api/admin/users/{userId}/roles": {
      "put": {
        "summary": "Update user roles (admin)",
        "tags": ["admin"],
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "roles": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["roles"]
              },
              "example": { "roles": ["admin", "user"] }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } }
          },
          "400": { "description": "Validation error", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "Not authenticated" },
          "403": { "description": "Forbidden" },
          "404": { "description": "User not found", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/admin/audit-log": {
      "get": {
        "summary": "Audit log (admin)",
        "tags": ["admin"],
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          { "name": "event", "in": "query", "schema": { "type": "string" }, "required": false },
          { "name": "user_id", "in": "query", "schema": { "type": "integer" }, "required": false },
          { "name": "since", "in": "query", "schema": { "type": "string", "format": "date-time" }, "required": false },
          { "name": "until", "in": "query", "schema": { "type": "string", "format": "date-time" }, "required": false },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 100 } },
          { "name": "offset", "in": "query", "schema": { "type": "integer", "default": 0 } }
        ],
        "responses": {
          "200": {
            "description": "Entries",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "entries": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer" },
                          "ts": { "type": "string", "format": "date-time" },
                          "event": { "type": "string" },
                          "user_id": { "type": "integer", "nullable": true },
                          "username": { "type": "string", "nullable": true },
                          "email": { "type": "string", "format": "email", "nullable": true },
                          "ip": { "type": "string", "nullable": true },
                          "meta": { "type": "object" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Not authenticated" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/api/config": {
      "get": {
        "summary": "Runtime config",
        "tags": ["ops"],
        "responses": {
          "200": {
            "description": "Settings",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "session": {
                      "type": "object",
                      "properties": {
                        "max_per_user": { "type": "integer" },
                        "idle_timeout_minutes": { "type": "integer" },
                        "ttl_days": { "type": "integer" },
                        "rolling_renewal_minutes": { "type": "integer" }
                      }
                    },
                    "rate_limits": {
                      "type": "object",
                      "properties": {
                        "login_ip_max": { "type": "integer" },
                        "login_id_max": { "type": "integer" },
                        "login_window_ms": { "type": "integer" },
                        "reset_max": { "type": "integer" },
                        "reset_window_ms": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Healthcheck",
        "tags": ["ops"],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/ready": {
      "get": {
        "summary": "Readiness (DB ping)",
        "operationId": "getReady",
        "tags": ["ops"],
        "responses": {
          "200": {
            "description": "Ready",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "service": { "type": "string" },
                    "status": { "type": "string", "enum": ["ready"] }
                  }
                }
              }
            }
          },
          "503": {
            "description": "Degraded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "service": { "type": "string" },
                    "status": { "type": "string", "enum": ["degraded"] },
                    "error": { "type": "string" }
                  }
                },
                "example": { "service": "logs-backend", "status": "degraded", "error": "db_unreachable" }
              }
            }
          }
        }
      }
    },
    "/metrics": {
      "get": {
        "summary": "Metrics",
        "tags": ["ops"],
        "responses": { "200": { "description": "OK" } }
      }
    }
  }
}
